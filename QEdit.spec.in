%define ver      @VERSION@
%define rel      0
%define prefix   /usr

Summary: running processes control
Name: QEdit
Version: %{ver}
Release: %{rel}
License: GPL
Group: User Interface/X
Source: %{name}-%{ver}.tar.gz
BuildRoot: /var/tmp/%{name}-buildroot

%description
Advanced text editor

%prep
%setup -q -n %{name}-%{ver} %{rel}

%build
./autogen.sh --prefix=%{prefix}
make  CFLAGS="$RPM_OPT_FLAGS"

%install
make prefix=$RPM_BUILD_ROOT%{prefix} install-strip

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc COPYING INSTALL
%{prefix}/bin/qedit
%{prefix}/share/QEdit/patterns/c_patterns.xml
%{prefix}/share/QEdit/patterns/default_patterns.xml
%{prefix}/share/QEdit/patterns/diff_patterns.xml
%{prefix}/share/QEdit/patterns/fortran_patterns.xml 
%{prefix}/share/QEdit/patterns/html_patterns.xml
%{prefix}/share/QEdit/patterns/latex_patterns.xml
%{prefix}/share/QEdit/patterns/makefile_patterns.xml
%{prefix}/share/QEdit/patterns/perl_patterns.xml
%{prefix}/share/QEdit/patterns/shell_patterns.xml
%{prefix}/share/QEdit/patterns/xml_patterns.xml
%changelog
